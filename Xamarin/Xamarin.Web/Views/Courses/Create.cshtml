@model Xamarin.Web.Data.Entities.Course

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo</h1>

<hr />
<div class="row text-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DayAndHour" class="control-label"></label>
                <select asp-for="DayAndHour" class="form-control">
                    <option value="0" selected>Seleccióne...</option>
                    <option value="1">Lunes 18-22hs</option>
                    <option value="2">Martes 18-22hs</option>
                    <option value="3">Miercoles 18-22hs</option>
                    <option value="4">Jueves 18-22hs</option>
                    <option value="5">Viernes 18-22hs</option>
                </select>
                <span asp-validation-for="DayAndHour" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" type="date" value="">
                <span asp-validation-for="StartDate"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" type="date" value="">
                <span asp-validation-for="EndDate"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
